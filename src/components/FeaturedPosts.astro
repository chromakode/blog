---
import type { GetImageResult } from 'astro'
import { getFeaturedPosts, getPostImage, postURL } from '@content/posts'

const featuredPosts = await getFeaturedPosts()

const imgs: GetImageResult[] = []
for (const post of featuredPosts) {
  const img = await getPostImage(post)
  if (!img) {
    throw new Error(`Featured post missing image: ${post.slug}`)
  }
  imgs.push(img)
}
---

<ul aria-label="Featured posts">
  {
    featuredPosts.slice(0, 3).map((post, idx) => (
      <li class="featured-post">
        <a href={postURL(post.slug)} title={post.data.title} rel="prefetch">
          <img
            {...imgs[idx].attributes}
            src={imgs[idx].src}
            class="post-hero-img"
            transition:name={post.slug}
            alt=""
          />
          <div class="info">
            <div class="title">{post.data.title}</div>
            <div class="description">{post.data.description}</div>
          </div>
        </a>
      </li>
    ))
  }
</ul>

<style>
  ul {
    display: flex;
    flex-direction: column;
    padding: 0;
    margin-left: -2rem;
    margin-right: -2rem;
    margin-bottom: 3rem;
  }

  .featured-post {
    display: flex;
    height: 9rem;
    list-style-type: none;
    margin-bottom: 1.5rem;
    box-shadow: 0 0.05rem 0.25rem rgba(0, 0, 0, 0.25);
    border-radius: 0.5rem;
    overflow: hidden;
  }

  .featured-post a {
    display: flex;
    text-decoration: none;
    color: black;
  }

  .post-hero-img {
    /* Work around featured post thumbs losing rounded corners during transitions */
    border-top-left-radius: 0.5rem;
    border-bottom-left-radius: 0.5rem;
  }

  html[data-astro-transition=forward] body:not(.scrolled) .post-hero-img {
    /* Prevent slide transition to offscreen featured post tile. */
    view-transition-name: none;
  }

  .info {
    display: flex;
    justify-content: center;
    flex-direction: column;
    margin: 0 1.75rem;
    overflow: hidden;
  }

  .featured-post img {
    width: auto;
    height: 100%;
    aspect-ratio: 16 / 9;
    object-fit: cover;
  }

  .title {
    justify-content: center;
    font-family: 'Lato', sans-serif;
    font-size: 1.1rem;
    font-weight: bold;
  }

  .description {
    text-overflow: ellipsis;
    overflow: hidden;
  }

  @media (max-width: 900px) {
    ul {
      margin-left: 0;
      margin-right: 0;
    }

    .featured-post img {
      width: 33%;
    }

    .info {
      margin: 0 min(1.75rem, 4%);
    }

    .title,
    .description {
      display: -webkit-box;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 2;
      overflow: hidden;
      text-overflow: ellipsis;
    }
  }
</style>
